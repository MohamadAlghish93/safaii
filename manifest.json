{
  "manifest_version": 2,
  "name": "Input Reader",
  "version": "1.0",
  "description": "Reads all input elements on a page and displays their id, type, and placeholder",
  
  "permissions": [
    "activeTab"
  ],
  
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Read Inputs",
    "default_popup": "popup.html"
  },
  
  "icons": {
    "48": "icon.png"
  }
}